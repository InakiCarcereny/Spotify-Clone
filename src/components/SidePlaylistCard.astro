---
import {type Playlist } from '@/lib/data'

interface Props {
  playlists: Playlist
}

const { playlists } =Astro.props
const {id, color, artists, title, cover} = playlists
---

<article class="mx-2 my-1 rounded-xl hover:bg-[#212121]">
  <a 
  class="flex items-center"
  href=`/${id}`>
    <picture>
      <img class="w-16 h-16 px-2 py-2 rounded-xl"src={cover} alt="">
    </picture>
    <div class="flex flex-col text-start">
      <h2 class="text-white text-base font-semibold">{title}</h2>
      <p class="text-zinc-400 text-sm font-medium">{artists}</p>
    </div>
  </a>
</article>
  

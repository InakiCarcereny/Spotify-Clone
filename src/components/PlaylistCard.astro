---
import {type Playlist } from '@/lib/data'

interface Props {
  playlists: Playlist
}

const { playlists } =Astro.props
const {id, color, artists, title, cover} = playlists
---

<article class="rounded-lg hover:bg-[#212121] px-1 py-1 duration-300">
  <a 
  class="flex flex-col"
  href=`/${id}`
  transition:name=`playlist ${id} image`>
    <picture>
      <img class="w-48 h-48 px-2 py-2 rounded-xl"src={cover} loading="lazy" alt="">
    </picture>
    <div class="flex flex-col text-start mx-2">
      <h2 class="text-white text-base font-semibold">{title}</h2>
      <p class="text-zinc-400 text-sm">{artists}</p>
    </div>
  </a>
</article>

  